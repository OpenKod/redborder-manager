require 'rubygems'
require 'chef'
require 'json'

Chef::Config.from_file("/etc/chef/client.rb")
Chef::Config[:node_name]  = "admin"
Chef::Config[:client_key] = "/etc/chef-server/admin.pem"
Chef::Config[:http_retry_count] = 5

role = Chef::Role.load("manager")

if !role.nil?
  ARGV.each do|f|
    printf("Reading #{f}\n")
    if File.exist?(f)
      file = File.read(f)
      hash = JSON.parse(file)
      hash.each do |k,v|
        printf("  * Role key: #{k}\n")
        role.override_attributes[k] = {} if role.override_attributes[k].nil?
        role.override_attributes[k]=role.override_attributes[k].merge(v)
      end
    end
  end
  if role.save
    printf("Role #{role.name} saved successfully\n")
  else
    printf("Role #{role.name} has not been saved!!!!\n")
  end
end

